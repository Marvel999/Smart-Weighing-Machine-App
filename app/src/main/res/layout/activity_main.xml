<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3944BC">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/devicesListView"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/connection_button"
        android:background="#FFF"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/connection_button">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth ON"
            android:id="@+id/scan"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/smooth_cornner"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth OFF"
            android:id="@+id/off"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/smooth_cornner"
            android:layout_marginLeft="20dp"
             />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/hii"
        android:layout_below="@id/connection_button">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show paired Devices"
            android:id="@+id/PairedBtn"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/smooth_cornner"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover New Devices"
            android:id="@+id/discover"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/smooth_cornner"
            />


    </LinearLayout>




    </LinearLayout>





















    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smooth_cornner"
        android:layout_marginTop="300dp"
        android:textColor="#3944BC"
        android:visibility="visible"
        android:id="@+id/editbrand"
        android:textAlignment="center"
        android:text="StoryFy"
        android:editable="true"
        android:padding="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/smooth_cornner"
        android:layout_marginTop="300dp"
        android:textColor="#3944BC"
        android:id="@+id/lockbrand"
        android:textAlignment="center"
        android:onClick="Lock"
        app:srcCompat="@drawable/lock_1"
        android:padding="10dp"
        android:layout_marginLeft="330dp"
        android:layout_marginRight="20dp"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#3944BC"
        android:textAlignment="center"
        android:background="@drawable/smooth_cornner"
        android:id="@+id/digitalScreen"
        android:text="1.500"
        android:padding="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"/>


    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="#3944BC"
        android:textAlignment="center"
        android:background="@drawable/smooth_cornner"
        android:text="+"
        android:id="@+id/sinetextview"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"/>


    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#3944BC"

        android:background="@drawable/smooth_cornner"
        android:text="Tolam"
        android:id="@+id/unittextview"
        android:padding="10dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="420dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="480dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smooth_cornner"
            android:text="RESET"
            android:textColor="#3944BC"
            android:textSize="15dp"
            android:id="@+id/resetbutton"
            android:paddingHorizontal="20dp"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/smooth_cornner"
            android:layout_marginLeft="30dp"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_arrow_forward_blue_24dp"
            android:id="@+id/rightbutton"
            android:paddingHorizontal="20dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/smooth_cornner"
            android:layout_marginLeft="30dp"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_arrow_back_blue_24dp"
            android:id="@+id/leftbutton"
            android:paddingHorizontal="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="580dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smooth_cornner"
            android:text="MODE"
            android:textColor="#3944BC"
            android:textSize="15dp"
            android:id="@+id/modebutton"
            android:paddingHorizontal="20dp"/>







    </LinearLayout>



    







</RelativeLayout>